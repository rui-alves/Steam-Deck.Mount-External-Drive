[Unit]
Description=Mount External Drive on %i
After=local-fs.target

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/usr/local/lib/scawp/SDMED/automount.sh add %i
ExecStop=/usr/local/lib/scawp/SDMED/automount.sh remove %i

[Install]
WantedBy=multi-user.target
